@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">

    @if (Model.Count() > 0)
    {
        <h3 class="text-primary">Yorumlar</h3>
    }
    else
    {
        <h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }

    <br />

    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.UserName</h5>

                <div class="row"> <h6 class="p-1 pl-1" > <b>  @item.Title :  </b> </h6>   <h6 class="p-1">    @item.Content  </h6> </div>

                <br />
            </div>
        </div>
        
    }

</div>